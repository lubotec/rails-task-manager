<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <input type="checkbox" checked disabled><%= "This task is completed!" %>
<% else %>
  <input type="checkbox" disabled><%= "This task is not completed yet!" %>
<% end %>

<p> <%= link_to "Edit this task", edit_task_path(@task) %> </p>

<p> <%= link_to "Back to list", tasks_path %> </p>
